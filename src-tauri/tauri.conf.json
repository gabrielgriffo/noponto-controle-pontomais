{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "No Ponto",
  "version": "0.1.0",
  "identifier": "com.gabriel.noponto",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/noponto-controle-ponto/browser"
  },
  "app": {
    "windows": [
      {
        "title": "No Ponto",
        "width": 420,
        "height": 620,
        "decorations": false,
        "visible": false,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
